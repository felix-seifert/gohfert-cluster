network:
  version: 2
  ethernets:
    {{ netplan_interface }}:
      dhcp4: no
      addresses:
        - {{ netplan_address }}
      gateway4: {{ netplan_gateway }}
      nameservers:
        search: [{{ netplan_search_domains | join(', ') }}]
        addresses: [{{ netplan_nameservers | join(', ') }}]
